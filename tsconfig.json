{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist/lib",
    "declaration": true,
    "esModuleInterop": true,
    "declarationDir": "dist/types",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
